<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="368.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projektnizadatak.Controllers.GoogleMapController.KartaStanista">
    <top>
        <VBox alignment="TOP_CENTER" prefHeight="31.0" prefWidth="600.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <fx:include source="../menu/izbornik.fxml" />
            </children>
        </VBox>
    </top>
    <center>
        
    </center>
   <center>
       <StackPane alignment="CENTER">
           <ImageView fx:id="kartaImage" fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
               <image>
                   <Image url="@../Images/kartaZoo.jpg" />
               </image>
           </ImageView>
           <AnchorPane>
            <Button fx:id="hippoStanisteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#showHabitatDetails" prefHeight="30.0" prefWidth="30.0" text="N">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="-6">
                     <image>
                        <Image url="@../Images/Icons/hippoIcon.png" />
                     </image></ImageView>
               </graphic>
            </Button>
            <Button fx:id="pingvinStanisteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#showHabitatDetails" prefHeight="30.0" prefWidth="30.0" text="P">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="-6">
                     <image>
                        <Image url="@../Images/Icons/penguinIcon.png" />
                     </image></ImageView>
               </graphic>
            </Button>
            <Button fx:id="zmijaStanisteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#showHabitatDetails" prefHeight="30.0" prefWidth="30.0" text="Z">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="-6">
                     <image>
                        <Image url="@../Images/Icons/snakeIcon.png" />
                     </image></ImageView>
               </graphic>
            </Button>
               <Button fx:id="lavStanisteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#showHabitatDetails" prefHeight="30.0" prefWidth="30.0" text="L">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" smooth="false" translateX="-6">
                     <image>
                        <Image url="@../Images/Icons/lionIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
           </AnchorPane>
       </StackPane>
   </center>
</BorderPane>
