<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="370.0" prefWidth="600.0" styleClass="bodybg" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projektnizadatak.Controllers.ZivotinjeController.UnosZivotinjaController">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="103.0" prefWidth="600.0" BorderPane.alignment="TOP_CENTER" VBox.vgrow = "ALWAYS">
         <children>
            <fx:include source="../menu/izbornik.fxml" />
            <Label alignment="CENTER" text="Unos životinja" textAlignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="142.0" prefWidth="600.0" BorderPane.alignment="CENTER" VBox.vgrow = "ALWAYS">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow = "ALWAYS">
               <children>
                  <Label text="Vrsta životinje:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="vrstaZivotinjeTextField" promptText="vrsta">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow = "ALWAYS">
               <children>
                  <Label text="Razred životinje:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="razredZivotinjeTextField" promptText="razred" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow = "ALWAYS">
               <children>
                  <Label text="Starost životinje:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="starostZivotinjeTextField" promptText="starost" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow = "ALWAYS">
               <children>
                  <RadioButton fx:id="muskoRadioButton" mnemonicParsing="false" text="Muško" />
                  <RadioButton fx:id="zenskoRadioButton" mnemonicParsing="false" text="Žensko">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></RadioButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="54.0" prefWidth="600.0" BorderPane.alignment="CENTER" VBox.vgrow = "ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#dodajZivotinju" text="Spremi životinju" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
